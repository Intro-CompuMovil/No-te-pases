<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioSesion">

    <RelativeLayout
        android:id="@+id/navegacion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/barraNavegacion"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/imageMenu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/menuicono"
            />

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/logoicono"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/imageBus"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/autobusicono"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>

    <ImageView
        android:id="@+id/iconoInicioSesion"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/iniciosesion"
        android:layout_above="@+id/textInicioSesion"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/textInicioSesion"
        android:text="Iniciar Sesión"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/originregular"/>
    <EditText
        android:id="@+id/usuario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInicioSesion"
        android:layout_centerHorizontal="true"
        android:hint="Ingresa tu usuario"/>
    <EditText
        android:id="@+id/contraseña"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usuario"
        android:layout_centerHorizontal="true"
        android:hint="Ingresa tu contraseña"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonIngresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contraseña"
        android:layout_centerHorizontal="true"
        android:text="Ingresar!" />

    <TextView
        android:id="@+id/textoRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonIngresar"
        android:layout_centerHorizontal="true"
        android:text="No estás isncrito?"/>
    <TextView
        android:id="@+id/textoLinkRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textoRegistro"
        android:layout_centerHorizontal="true"
        android:text="Registrate"
        android:textColor="@color/Subrayado"/>


</RelativeLayout>