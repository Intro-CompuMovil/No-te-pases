<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PagarPasaje">

      <RelativeLayout
          android:id="@+id/navegacion"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:background="@color/barraNavegacion"
          android:padding="10dp">

        <ImageButton
            android:id="@+id/imageMenu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/menuicono"
            android:scaleType="fitCenter"
            />

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/logoicono"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/imageBus"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/autobusicono"
            android:layout_alignParentRight="true"
            />


      </RelativeLayout>

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="@color/barraNavegacion"
      app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
      android:layout_alignParentTop="true"
      android:layout_below="@+id/navegacion"/>


  <ImageView
      android:id="@+id/iconoPagarPasaje"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:src="@drawable/iconopagar"
      android:layout_below="@+id/navegacion"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="80dp"/>
  <TextView
      android:id="@+id/textPagarPasaje"
      android:text="Pagar pasaje"
      android:textSize="40sp"
      android:textAlignment="center"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_below="@id/iconoPagarPasaje"
      android:fontFamily="@font/originregular"/>

  <TextView
      android:id="@+id/textSaldo"
      android:text="Saldo"
      android:textSize="18sp"
      android:textColor="@color/Subrayado"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/textPagarPasaje"
      android:layout_alignParentStart="true"
      android:layout_marginStart="100dp"
      android:layout_marginTop="40dp"/>

  <TextView
      android:id="@+id/saldoPasajero"
      android:text="$"
      android:textSize="18sp"
      android:textColor="@color/black"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/textPagarPasaje"
      android:layout_alignParentStart="true"
      android:layout_marginStart="200dp"
      android:layout_marginTop="40dp"/>

  <TextView
      android:id="@+id/textValorPasaje"
      android:text="Valor
      pasaje"
      android:textSize="18sp"
      android:textColor="@color/Subrayado"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/textSaldo"
      android:layout_alignParentStart="true"
      android:layout_marginStart="100dp"
      android:layout_marginTop="40dp"/>

  <TextView
      android:id="@+id/valorPasaje"
      android:text="$"
      android:textSize="18sp"
      android:textColor="@color/black"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/saldoPasajero"
      android:layout_alignParentStart="true"
      android:layout_marginStart="200dp"
      android:layout_marginTop="50dp"/>

  <Button
      android:id="@+id/botonPagar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Pagar"
      android:backgroundTint="@color/barraNavegacion"
      android:layout_centerHorizontal="true"
      android:layout_below="@+id/valorPasaje"
      android:layout_marginTop="70dp"/>

  </RelativeLayout>